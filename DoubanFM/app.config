<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <!-- DoubanFM -->
    <!--<add key="SpecifyAlbumPictureUrl" value="http://img3.douban.com/lpic/s6945216.jpg"/>-->
